{
  "extends": "stylelint-config-sass-guidelines",
  "plugins": ["stylelint-order"],
  "rules": {
    "order/order": ["custom-properties", "declarations"],
    "order/properties-alphabetical-order": true,
    "string-quotes": "double",
    "max-nesting-depth": 3,
    "selector-no-qualifying-type": null
  }
}
